{
  "name": "paperhive-frontend",
  "version": "1.0.0",
  "description": "PaperHive frontend",
  "scripts": {
    "build": "rm -rf build/* && npm run build:vendor && npm-run-all -s build:prod:*",
    "build:vendor": "gulp vendor",
    "build:prod:css": "lessc --clean-css=\"--skip-restructuring\" less/index.less build/index.css",
    "build:prod:js": "gulp templates && jspm build app/index.ts build/index.js --minify --skip-source-maps",
    "build:prod:static": "gulp static",
    "build:dev:css": "lessc less/index.less build/index.css",
    "build:dev:html": "ENV=DEV gulp templates",
    "install-deps": "npm install && bower install && jspm install && typings install",
    "lint": "find src/js/ -name *.ts | xargs ./node_modules/.bin/tslint",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "karma start --single-run",
    "test:e2e": "gulp test",
    "watch": "npm run build:vendor && npm-run-all -p watch:*",
    "watch:css": "nodemon -e less -w less -x \"npm run build:dev:css\"",
    "watch:html": "nodemon -w html -x \"npm run build:dev:html\"",
    "watch:serve": "live-server --no-browser --wait=250 --watch=app --watch=jspm_packages --watch=build --watch=tmp --mount=/:build --entry-file=index.html"
  },
  "author": "Nico Schl√∂mer <nico@paperhive.org>",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "bower": "^1.6.5",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.11",
    "connect-history-api-fallback": "^1.1.0",
    "del": "^2.0.2",
    "fs": "^0.0.2",
    "gulp": "^3.9.0",
    "gulp-angular-templatecache": "^1.8.0",
    "gulp-batch": "^1.0.5",
    "gulp-cachebust": "^0.0.6",
    "gulp-connect": "^2.2.0",
    "gulp-eslint": "^1.1.0",
    "gulp-htmlhint": "^0.3.0",
    "gulp-htmlmin": "^1.2.0",
    "gulp-if": "^2.0.0",
    "gulp-imagemin": "^2.4.0",
    "gulp-less": "^3.0.3",
    "gulp-minify-css": "^1.2.1",
    "gulp-protractor": "^2.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-streamify": "^1.0.2",
    "gulp-template": "^3.0.0",
    "gulp-uglify": "^1.4.2",
    "gulp-util": "^3.0.7",
    "jasmine": "^2.4.0",
    "jasmine-core": "^2.3.4",
    "jspm": "^0.17.0-beta.5",
    "karma": "^0.13.15",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.1",
    "less": "^2.6.0",
    "less-plugin-clean-css": "^1.5.1",
    "live-server": "^0.9.1",
    "lodash": "^3.10.1",
    "merge-stream": "^1.0.0",
    "phantomjs": "^1.9.19",
    "tslint": "^3.3.0",
    "typescript": "^1.7.5",
    "typings": "^0.6.3",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.6.0"
  },
  "jspm": {
    "dependencies": {
      "angular-route-segment": "github:artch/angular-route-segment@^1.5.0",
      "highlightjs": "github:components/highlightjs@^9.1.0",
      "javascript-detect-element-resize": "github:sdecima/javascript-detect-element-resize@^0.5.3",
      "json": "github:systemjs/plugin-json@^0.1.0",
      "kramed": "npm:kramed@^0.5.5",
      "leaflet": "github:Leaflet/Leaflet@^0.7.7",
      "angular": "github:angular/bower-angular@^1.4.9",
      "angular-animate": "github:angular/bower-angular-animate@^1.4.9",
      "angular-bootstrap": "github:angular-ui/bootstrap-bower@^1.1.2",
      "angular-leaflet-directive": "github:tombatossals/angular-leaflet-directive@^0.10.0",
      "angular-moment": "npm:angular-moment@^1.0.0-beta.3",
      "angular-route": "github:angular/bower-angular-route@^1.4.9",
      "angular-sanitize": "github:angular/bower-angular-sanitize@^1.4.9",
      "jquery": "npm:jquery@^2.2.0",
      "lodash": "npm:lodash@^4.2.0",
      "ment.io": "github:jeff-collins/ment.io@^0.9.24",
      "ngSmoothScroll": "github:d-oliveros/ngSmoothScroll@^2.0.0",
      "paperhive-sources": "npm:paperhive-sources@^4.0.1",
      "pdfjs-dist": "github:mozilla/pdfjs-dist@^1.4.37",
      "rangy": "github:timdown/rangy-release@^1.3.0",
      "ts": "github:frankwallis/plugin-typescript@^2.5.9"
    },
    "devDependencies": {
      "plugin-babel": "npm:systemjs-plugin-babel@^0.0.2",
      "plugin-typescript": "github:frankwallis/plugin-typescript@^2.5.9"
    },
    "peerDependencies": {
      "assert": "github:jspm/nodelibs-assert@^0.2.0-alpha",
      "process": "github:jspm/nodelibs-process@^0.2.0-alpha",
      "url": "github:jspm/nodelibs-url@^0.2.0-alpha"
    },
    "overrides": {
      "github:angular/bower-angular-animate@1.4.9": {
        "main": "angular-animate",
        "registry": "jspm",
        "dependencies": {
          "angular": "^1.3.0"
        },
        "meta": {
          "angular-animate.js": {
            "deps": [
              "angular"
            ]
          }
        }
      },
      "github:angular/bower-angular-route@1.4.9": {
        "main": "angular-route",
        "registry": "jspm",
        "dependencies": {
          "angular": "^1.3.0"
        },
        "meta": {
          "angular-route.js": {
            "deps": [
              "angular"
            ]
          }
        }
      },
      "github:angular/bower-angular-sanitize@1.4.9": {
        "main": "angular-sanitize",
        "registry": "jspm",
        "dependencies": {
          "angular": "^1.3.0"
        },
        "meta": {
          "angular-sanitize.js": {
            "deps": [
              "angular"
            ]
          }
        }
      },
      "github:angular/bower-angular@1.4.9": {
        "main": "angular",
        "meta": {
          "angular.js": {
            "exports": "angular"
          }
        }
      },
      "github:tombatossals/angular-leaflet-directive@0.10.0": {
        "dependencies": {
          "leaflet": "^0.7.7"
        },
        "meta": {
          "dist/angular-leaflet-directive.js": {
            "globals": {
              "L": "leaflet"
            }
          }
        }
      },
      "github:timdown/rangy-release@1.3.0": {
        "format": "cjs",
        "main": "rangy-core",
        "meta": {
          "rangy-core.js": {
            "exports": "rangy"
          },
          "rangy-cssclassapplier.js": {
            "deps": [
              "./rangy-core"
            ]
          },
          "rangy-selectionsaverestore.js": {
            "deps": [
              "./rangy-core"
            ]
          },
          "rangy-serializer.js": {
            "deps": [
              "./rangy-core"
            ]
          }
        }
      },
      "npm:jquery@2.2.0": {
        "format": "amd"
      },
      "npm:typescript@1.7.5": {
        "browser": {},
        "map": {
          "buffer": "@empty",
          "child_process": "@empty",
          "fs": "@empty",
          "os": "@empty",
          "path": "@empty",
          "process": "@empty",
          "readline": "@empty"
        }
      }
    }
  }
}
