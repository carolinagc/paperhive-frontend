{
  "name": "paperhive-frontend",
  "version": "1.0.0",
  "description": "PaperHive frontend",
  "scripts": {
    "build": "npm run build:js",
    "build:js": "jspm build app/index.ts build/index.min.js --minify",
    "install-deps": "npm install && bower install && jspm install && typings install",
    "lint": "find src/js/ -name *.ts | xargs ./node_modules/.bin/tslint",
    "serve": "live-server --no-browser --wait=250 --watch=app --watch=jspm_packages",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "karma start --single-run",
    "test:e2e": "gulp test"
  },
  "author": "Nico Schl√∂mer <nico@paperhive.org>",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "bower": "^1.6.5",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.11",
    "connect-history-api-fallback": "^1.1.0",
    "del": "^2.0.2",
    "fs": "^0.0.2",
    "gulp": "^3.9.0",
    "gulp-angular-templatecache": "^1.8.0",
    "gulp-batch": "^1.0.5",
    "gulp-cachebust": "^0.0.6",
    "gulp-connect": "^2.2.0",
    "gulp-eslint": "^1.1.0",
    "gulp-htmlhint": "^0.3.0",
    "gulp-htmlmin": "^1.2.0",
    "gulp-if": "^2.0.0",
    "gulp-imagemin": "^2.4.0",
    "gulp-less": "^3.0.3",
    "gulp-minify-css": "^1.2.1",
    "gulp-protractor": "^2.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-streamify": "^1.0.2",
    "gulp-template": "^3.0.0",
    "gulp-typescript": "^2.10.0",
    "gulp-uglify": "^1.4.2",
    "gulp-util": "^3.0.7",
    "jasmine": "^2.4.0",
    "jasmine-core": "^2.3.4",
    "jspm": "^0.17.0-beta.5",
    "karma": "^0.13.15",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.1",
    "live-server": "^0.9.1",
    "merge-stream": "^1.0.0",
    "phantomjs": "^1.9.19",
    "tslint": "^3.3.0",
    "typescript": "^1.7.5",
    "typings": "^0.6.3",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.6.0"
  },
  "dependencies": {
    "angular": "^1.4.9",
    "angular-animate": "^1.4.9",
    "angular-route": "^1.4.9",
    "angular-sanitize": "^1.4.9",
    "jquery": "^2.2.0",
    "lodash": "^4.1.0",
    "paperhive-sources": "^4.0.1"
  },
  "jspm": {
    "dependencies": {
      "jquery": "npm:jquery@^2.2.0",
      "plugin-babel": "npm:systemjs-plugin-babel@^0.0.2",
      "rangy": "github:timdown/rangy-release@^1.3.0",
      "ts": "github:frankwallis/plugin-typescript@^2.5.9"
    },
    "devDependencies": {
      "plugin-typescript": "github:frankwallis/plugin-typescript@^2.5.9"
    },
    "peerDependencies": {
      "process": "github:jspm/nodelibs-process@^0.2.0-alpha"
    },
    "overrides": {
      "github:timdown/rangy-release@1.3.0": {
        "format": "global",
        "main": "rangy-core",
        "meta": {
          "rangy-core.js": {
            "exports": "rangy"
          },
          "rangy-cssclassapplier.js": {
            "deps": [
              "./rangy-core"
            ]
          },
          "rangy-selectionsaverestore.js": {
            "deps": [
              "./rangy-core"
            ]
          },
          "rangy-serializer.js": {
            "deps": [
              "./rangy-core"
            ]
          }
        }
      },
      "npm:jquery@2.2.0": {
        "format": "amd"
      },
      "npm:typescript@1.7.5": {
        "browser": {},
        "map": {
          "buffer": "@empty",
          "child_process": "@empty",
          "fs": "@empty",
          "os": "@empty",
          "path": "@empty",
          "process": "@empty",
          "readline": "@empty"
        }
      }
    }
  }
}
